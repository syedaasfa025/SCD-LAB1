public class SumEvenAndOddNumbers {
    public static void main(String[] args) {
        int sumEven = 0;
        int sumOdd = 0;

        // Loop through numbers 1 to 100
        for (int i = 1; i <= 100; i++) {
            // Check if the number is even
            if (i % 2 == 0) {
                sumEven += i; // Add the even number to sumEven
            } else {
                sumOdd += i; // Add the odd number to sumOdd
            }
        }

        // Print the results
        System.out.println("The sum of all even numbers from 1 to 100 is: " + sumEven);
        System.out.println("The sum of all odd numbers from 1 to 100 is: " + sumOdd);
    }
}
